        </div>
    </nav>
<% if (typeof successMessage !== 'undefined') { %>
    <script>
        alert('<%= successMessage %>');
    </script>
<% } %>
<div class="flex justify-center m-6">

    <h1>add article</h1>
</div>
<form action="/post/update/<%=post.id%>" method="post" enctype="multipart/form-data">
    <div class="flex">
        <div class="flex-1 flex flex-col gap-6 m-9">
            <input  name="title" value="<%=post.title%>"  class="inline w-full rounded-md  bg-white py-2 pl-3 pr-3 leading-5 placeholder-gray-500 focus:border-indigo-500 focus:placeholder-gray-400 focus:outline-none  sm:text-sm" placeholder="title" type="" autofocus="" value="">
            <input type="file" name="image" id="">
            <input type="text" value="<%=post.content%>" name="content" style="height: 435px;flex-shrink: 0;" id="">
        </div>
        <div class="flex-1">
            <div class="flex justify-center m-6">

                <h1>update article</h1>
            </div>
            <input type="hidden" name="categories" id="cat_id_string">
            <div class=" m-9 overflow-y-scroll overflow-hidden " style="width: auto; height: 300px;">
                <% if(categories !== undefined && categories.length > 0) {%>
                <div class="grid grid-cols-4 gap-6" >
                    <% for(let i = 0; i < categories.length; i++) { %>
                    <div class="category-card" onclick="toggleCategory(this)">
                        <p class="hidden"><%=categories[i].id%></p>
                        <h3 class="text-lg font-semibold mt-2"><%=categories[i].title%></h3>
                    </div>
                    <% }%>
                </div>
                <% }%>
            </div>
            <div class="flex flex-1 items-center justify-center p-6"> 
                <button style="width: 150px;" class="p-3">update article</button>
            </div>
        </div>
    </div>
</form>

<script src="../../js/script.js"></script>
</body>

</html>